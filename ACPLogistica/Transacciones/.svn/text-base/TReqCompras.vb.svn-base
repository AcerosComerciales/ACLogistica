      End Try
      Return False
   End Function

   ''' <summary>
   ''' Grabar la requisicion de compra en la base de datos
   ''' </summary>
   ''' <param name="m_msg">Mensaje devuelto en caso de ocurrir alguna incidencia</param>
   ''' <returns></returns>
   ''' <remarks></remarks>
   Private Function grabarRequiCompra(ByRef m_msg As String) As Boolean
      Try
         If validar(m_msg) Then
            If ACControles.ACDialogos.ACMostrarMensajePregunta(String.Format("Grabar Requisición de Compra: {0}", Me.Text) _
             , "Desea grabar la Requisición de Compra?" _
             , ACControles.ACDialogos.LabelBotom.Si_No) = DialogResult.Yes Then
               '' Obtener datos
               m_eabas_requisicionescompra.ZONAS_Codigo = GApp.Zona
               m_eabas_requisicionescompra.SUCUR_Id = GApp.Sucursal
               m_eabas_requisicionescompra.ALMAC_Id = GApp.Almacen
               '' Obtener el correlativo y asignarlo
               Dim x_corre As Integer = 0
               Dim x_tipo As String = EABAS_CotizacionesCompra.TipoPedido.RQ.ToString()
               m_eabas_requisicionescompra.COTCO_Codigo = managerABAS_RequisicionesCompra.getCorrelativo(x_tipo, x_corre)
               m_eabas_requisicionescompra.COTCO_Numero = x_corre
               'm_eabas_requisicionescompra.COTCO_Codigo = managerABAS_RequisicionesCompra.getCorrelativo(x_corre, GApp.PuntoVenta)
               '' Definir el Estado
               m_eabas_requisicionescompra.COTCO_Estado = EABAS_CotizacionesCompra.getEstado(EABAS_CotizacionesCompra.Estado.Ingresado)
               '' Asignar la clase pedido a la capa de negocio 
               managerGenerarRequiCompra.EABAST_CotizacionesCompra = m_eabas_requisicionescompra

               ''Asignar correlativo COTCO_Id
               If m_eabas_requisicionescompra.Nuevo = True Then
                  ''Correlativo
                  m_eabas_requisicionescompra.COTCO_Id = managerABAS_RequisicionesCompra.getCorrelativo("COTCO_ID")
                  managerABAS_RequisicionesCompra.ABAS_CotizacionesCompra = m_eabas_requisicionescompra
               End If

               '' Grabar el pedido
               If managerGenerarRequiCompra.GrabaRequiCompra(GApp.Usuario, m_msg) Then
                  Return True
               Else
                  ACControles.ACDialogos.ACMostrarMensajeInformacion(String.Format("Información: {0}", Me.Text), "No se puede grabar, revise los detalles:", m_msg)
               End If
            End If
         End If
         Return False
      Catch ex As Exception
         Throw ex
      End Try
   End Function

   ''' <summary>
   ''' Crear nueva requisicion de compra
   ''' </summary>
   ''' <remarks></remarks>
   Private Sub nuevaRequisicion()
      Try
         '' Inicializar clase Pedido
         m_eabas_requisicionescompra = New EABAS_CotizacionesCompra
         m_eabas_requisicionescompra.Instanciar(ACEInstancia.Nuevo)
         ' '' Instanciar clase
         AsignarBinding()
         setInstancia(ACUtilitarios.ACSetInstancia.Nuevo)
         '' Para Cargar detalle del producto
         bs_detrequisicionescompras = New BindingSource
         m_eabas_requisicionescompra.ListABAS_CotizacionesCompraDetalle = New List(Of EABAS_CotizacionesCompraDetalle)
         bs_detrequisicionescompras.DataSource = m_eabas_requisicionescompra.ListABAS_CotizacionesCompraDetalle
         c1grdDetalle.DataSource = bs_detrequisicionescompras
         bnavProductos.BindingSource = bs_detrequisicionescompras

         tabMantenimiento.SelectedTab = tabDatos
         actxaProvCodigo.Focus()
      Catch ex As Exception
         Throw ex
      End Try
   End Sub

   ''' <summary>
   ''' Ordenar la grilla de requisiciones de compra
   ''' </summary>
   ''' <param name="x_columna"></param>
   ''' <remarks></remarks>
   Private Sub OrdenarPedidos(ByVal x_columna As String)
      Dim _ordenador As New ACOrdenador(Of EABAS_CotizacionesCompra)
      Try
         If m_order = 2 Then x_columna += " DESC"
         _ordenador.ACOrdenamiento = x_columna
         CType(bs_requisicionescompras.DataSource, List(Of EABAS_CotizacionesCompra)).Sort(_ordenador)
         c1grdBusqueda.Refresh()
         m_order = IIf(m_order = 1, 2, 1)
      Catch ex As Exception
         Throw ex
      End Try
   End Sub

